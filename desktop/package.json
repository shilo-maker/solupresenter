{
  "name": "solupresenter-desktop",
  "version": "1.3.3",
  "description": "SoluCast Desktop - Multi-display presentation software",
  "main": "dist/main/main/index.js",
  "author": "SoluCast",
  "license": "MIT",
  "scripts": {
    "dev": "npm run build:main:fast && concurrently -k \"npm run dev:renderer\" \"npm run watch:main\" \"npm run dev:electron\"",
    "dev:electron": "electron .",
    "watch:main": "node scripts/build-main.mjs --watch",
    "dev:renderer": "vite",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "node scripts/build-main.mjs",
    "build:main:fast": "node scripts/build-main.mjs",
    "build:renderer": "vite build",
    "start": "electron .",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "postinstall": "electron-builder install-app-deps",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.8.1",
    "axios": "^1.12.2",
    "electron-updater": "^6.3.9",
    "ffmpeg-static": "^5.3.0",
    "i18next": "^25.7.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "qrcode": "^1.5.4",
    "react-i18next": "^16.5.1",
    "react-rnd": "^10.5.2",
    "react-router-dom": "^7.1.1",
    "sequelize": "^6.37.5",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@types/sql.js": "^1.4.9",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.17",
    "concurrently": "^9.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.27.2",
    "png-to-ico": "^3.0.1",
    "rcedit": "^5.0.2",
    "react": "^19.0.0",
    "react-bootstrap": "^2.10.7",
    "react-dom": "^19.0.0",
    "sharp": "^0.34.5",
    "to-ico": "^1.1.5",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vitest": "^4.0.17",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.solucast.desktop",
    "productName": "SoluCast",
    "afterPack": "./scripts/afterPack.js",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/sql.js/dist/sql-wasm.wasm"
    ],
    "extraResources": [
      {
        "from": "node_modules/sql.js/dist/sql-wasm.wasm",
        "to": "sql-wasm.wasm"
      },
      {
        "from": "resources/dictionaries",
        "to": "dictionaries"
      },
      {
        "from": "resources/icons",
        "to": "icons"
      },
      {
        "from": "resources/bible-data",
        "to": "bible-data"
      },
      {
        "from": "resources/fonts",
        "to": "fonts"
      }
    ],
    "asarUnpack": [
      "node_modules/sql.js/dist/sql-wasm.wasm",
      "node_modules/ffmpeg-static/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "shilo-maker",
      "repo": "solupresenter"
    }
  }
}
