{
  "name": "solupresenter-desktop",
  "version": "1.0.0",
  "description": "SoluPresenter Desktop - Multi-display presentation software",
  "main": "dist/main/main/index.js",
  "author": "SoluPresenter",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "wait-on http://localhost:5173 && electron .",
    "dev:renderer": "vite",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.8.1",
    "axios": "^1.12.2",
    "electron-updater": "^6.3.9",
    "ffmpeg-static": "^5.3.0",
    "react-rnd": "^10.5.2",
    "react-router-dom": "^7.1.1",
    "sequelize": "^6.37.5",
    "socket.io-client": "^4.8.1",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@types/sql.js": "^1.4.9",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "react": "^19.0.0",
    "react-bootstrap": "^2.10.7",
    "react-dom": "^19.0.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.solupresenter.desktop",
    "productName": "SoluPresenter",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "solupresenter"
    }
  }
}
